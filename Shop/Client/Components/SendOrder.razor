<EditForm Model="Order" OnValidSubmit="HandleValidSubmit" Class="col-lg-7 col-md-9 mx-auto mb-4 py-3 border rounded">
    <div class="form-group">
        <label for="address">Address</label>
        <InputText @bind-Value="Order.Address" @onkeydown="() => serverValidator.Reset()" id="address" Class="form-control" />
    </div>

    <div class="form-group">
        <label class="form-check-label" for="phone">Phone</label>
        <InputText @bind-Value="Order.Phone" @onkeydown="() => serverValidator.Reset()" id="phone" Class="form-control" />
    </div>

    <DataAnnotationsValidator />
    <ServerValidator @ref="serverValidator" />

    <div class="form-group text-center mb-3">
        <button type="submit" class="btn btn-success">
            <span class="oi oi-check py-1" aria-hidden="true"></span>
            Send
        </button>
    </div>

    <div class="text-center">
        <ValidationSummary />
    </div>
</EditForm>